@page
@{
    List<ProductModel> products = (List<ProductModel>)ViewBag.products;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            foreach (var prd in products)
            {
            <tr>
                <th scope="row">@prd.Id</th>
                <td>@prd.Name</td>
                <td>@prd.Color</td>
                <td>@prd.Price</td>
            </tr>
            }
        }
    </tbody>
</table>