<h1>Details of Students</h1>

@{
    var Students = (List<Student>)ViewData["Details"];
}

<form class="form-inline my-3" asp-action="Details" asp-controller="Students">
    <input class="form-control mr-sm-2" typeof="ID" name="id" placeholder="Please Enter Your ID" aria-label="" />
    <button class="btn btn-outline-success my-2" type="submit">Get by ID</button>
</form>

<h5>Students:</h5>
<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Student in Students)
        {
            <tr>
                <td>@Student.Id</td>
                <td>@Student.FirstName</td>
                <td>@Student.LastName</td>
                <td>@Student.Email</td>
            </tr>
        }
    </tbody>
</table>